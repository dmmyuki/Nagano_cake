<section class="container">
  <div class="row">
    <div>
      <h4><%= @customer.full_name %>さんの会員詳細</h4>
    </div>

    <div class="col-8 mx-auto">
      <table class="table table-borderless">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %>&ensp;<%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.last_name_kana %>&ensp;<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>

    <div>
      <div>
        <%= link_to "編集する", edit_admin_customer_path, class:"btn btn-success" %>
      </div>
      <div>
      </div>
    </div>

  </div>
</section>
