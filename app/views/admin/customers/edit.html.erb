<section class="container">
  <div class="row">
    <div class="col-lg-8">

      <h4 class="my-3"><span class="bg-light"><%= @customer.full_name %>さんの会員情報編集</span></h4>

      <% form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        <tr>
          <th>氏名</th>
          <td><%= f.text_field:last_name %>&ensp;<%= f.text_field:first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= f.text_field:last_name_kana %>&ensp;<%= f.text_field:first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= f.text_field:postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field:address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= f.text_field:telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field:email %></td>
        </tr>
      </table>
        <%= f.submit "変更を保存", class:"btn btn-success" %>
      <% end %>

    </div>
  </div>
</section>
