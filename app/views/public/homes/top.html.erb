<section class="container">
  <div class="row">

    <div class="col-lg-10 offset-lg-1 my-3">
      <div class="card bg-dark">
        <%= image_tag 'ながのCAKE_top.jpg', class:"img-fluid" %>
        <div class="card-img-overlay">
          <!--できれば画像内の文字位置を画像左下にしたい-->
          <p class="card-text">
            ようこそ、ながのCAKEへ！<br>
            このサイトは、ケーキ販売のECサイトになります。<br>
            会員でない方も商品の閲覧はできますが、<br>
            購入には会員登録が必要になります。
          </p>
        </div>
      </div>
    </div>

    <div class="col-lg-10 offset-lg-1">
      <h4 class="my-3">新着商品</h4>
    </div>

    <% @items.each do |item| %>
      <div class="col">
        <div class="card">
        <%= image_tag item.image, size:"100x100", class:"card-img-top" %>
          <div class="card-body">
            <div class="card-title">
              <!--link_toでitem_pathに飛ばす-->
              <%= item.name %>
            </div>
            <div class="card-text">
              <!--税込み価格に変更する（現在は税抜き価格で表示中）-->
              <%= item.price.to_s(:delmited) %>円
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div>

  <div class="text-right">
      <!--ここはlink toでitems_pathに飛ばす-->
    <p>全ての商品を見る></p>
  </div>

</section>
