<section class="container">

  <h4 class="my-3">商品一覧(全<%= @items.count %>件)</h4>

  <div class="row">
    <div class="d-flex justify-content-lg-start">
      <% @items.each do |item| %>
      <div class="card-deck">
        <div class="col">
          <div class="card">
            <%= image_tag item.get_image, size:"100x100", class:"card-img-top" %>
              <div class="card-body">
                <div class="card-title">
                  <%= link_to item.name, item_path(item) %>
                </div>
                <div class="card-text">
                  <%= item.with_tax_price.to_s(:delmited) %>円
                </div>
              </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>

  </div>
</section>
