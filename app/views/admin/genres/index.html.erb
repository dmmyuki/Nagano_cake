<section class="container">
  <div class="row">
    <div class="col-lg-12">
      <h4 class="my-3"><span class="bg-light">ジャンル一覧・追加</span></h4>
    </div>

      <div class="col-lg-8 my-5">
        <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
          <%= f.label:name, "ジャンル名" %>
          <%= f.text_field:name, placeholder:"ジャンル名" %>
          <%= f.submit "新規登録", class:"btn btn-success" %>
        <% end %>
      </div>

      <div class="col-lg-8">
        <table class="table">
          <thead>
            <tr class="bg-light">
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-success" %></td>
            </tr>
          <% end %>
        </table>
      </div>

    </div>
  </div>
</section>
