<section class="container">
  <div class="row">
    <div class="col-lg-12">
      <h4 class="my-3"><span class="bg-light">注文履歴詳細</span></h4>
    </div>

    <div class="col-lg-10">
      <table class="table table-borderless">
        <tr>
          <th>氏名</th>
          <td>
            <%= link_to admin_customer_path(@order.customer.id) do %>
              <%= @order.customer.full_name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            〒<%= @order.postal_code %><br>
            <%= @order.address %>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
      </table>
    </div>

    <div class="col-lg-8">
      <table class="table">
        <thead>
          <tr class="bg-light">
            <th scope="col">商品名</th>
            <th scope="col">単価（税込）</th>
            <th scope="col">数量</th>
            <th scope="col">小計</th>
          </tr>
        </thead>
        <tbody>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.tax_price.to_s(:delimited) %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.subtotal.to_s(:delimited) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-lg-4">
      <table class="table">
        <tr>
          <th>商品合計</th>
          <td><%=  %>円</td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= @order.postage.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td><%= @order.charge.to_s(:delimited) %>円</td>
        </tr>
      </table>
    </div>
  </div>
</section>
