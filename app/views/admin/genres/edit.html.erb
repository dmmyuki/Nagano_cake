<section class="container">
  <div class="row">
    <div class="col-lg-12">
      <h4 class="my-3"><span class="bg-light">ジャンル編集</span></h4>

      <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
        <%= f.label:name, "ジャンル名" %>
        <%= f.text_field:name %>
        <%= f.submit "変更を保存", class:"btn btn-success" %>
      <% end %>
    </div>

  </div>
</section>
