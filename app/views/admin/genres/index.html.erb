<section class="container">
  <div class="row">
    <div>
      <h4>ジャンル一覧・追加</h4>

      <div class="pull-left">
        <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
          <%= f.label:name, "ジャンル名" %>
          <%= f.text_field:name, placeholder:"ジャンル名" %>
          <%= f.submit "新規登録", class:"btn btn-success" %>
        <% end %>
      </div>

      <div>
        <table style="opacity: 0.8;", width="300">
          <thead style="background:grey">
            <tr class="table-secondary">
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-success" %></td>
            </tr>
          <% end %>
        </table>
      </div>

    </div>
  </div>
</section>
