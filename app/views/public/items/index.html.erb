<section class="container">

  <h4 class="my-3">商品一覧(全<%= @items.count %>件)</h4>

  <div class="row">

    <div class="col-lg-12">
      <div class="card-deck row">
        <% @items.each do |item| %>
        <div class="col-3">
          <div class="card">
            <%= link_to image_tag(item.get_image, size:"170x100"), item_path(item), class:"card-img-top text-center" %>
              <div class="card-body">
                <div class="card-title">
                  <%= item.name %>
                </div>
                <div class="card-text">
                  <%= (item.with_tax_price).to_s(:delmited) %>円
                </div>
              </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>

  </div>
</section>
