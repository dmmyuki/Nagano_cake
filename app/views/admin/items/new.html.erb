<section class="container">
  <div class="row">
    <div class="col-lg-12">
      <h4><span class="bg-light">商品新規登録</span></h4>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6 offset-lg-3">
      <table class="table table-borderless">
        <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
          <tr>
            <th><%= f.label:image, "商品画像" %></th>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <th><%= f.label:name, "商品名" %></th>
            <td><%= f.text_field:name, placeholder:"商品名" %></td>
          </tr>
          <tr>
            <th><%= f.label:introduction, "商品説明" %></th>
            <td><%= f.text_area:introduction, placeholder:"ここに説明文を記述します" %></td>
          </tr>
          <tr>
            <th><%= f.label:genre_id, "ジャンル名" %></th>
            <td><%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "選択してください"}) %></td>
          </tr>
          <tr>
            <th><%= f.label:price, "税抜価格" %></th>
            <td><%= f.text_field:price, placeholder:"1000" %>円</td>
          </tr>
      </table>
          <%= f.submit "新規登録", class:"btn btn-success" %>
        <% end %>
    </div>

  </div>
</section>
