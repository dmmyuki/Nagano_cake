<section class="container">
  <div class="row">
    <div class="col-lg-8">
      <h4 class="my-3"><span class="bg-light"><%= @customer.full_name %>さんの会員詳細</span></h4>

      <table class="table table-borderless">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %>&ensp;<%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.last_name_kana %>&ensp;<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <% if @customer.is_acive? == true %>
    	        <p class="text-danger">退会</p>
				    <% else %>
				      <p class="text-success">有効</p>
				    <% end %>
          </td>
        </tr>
      </table>

    <div class="col-lg-10 offset-lg-1">
      <%= link_to "編集する", edit_admin_customer_path, class:"btn btn-success" %>
      <%= link_to "注文履歴一覧を見る", admin_root_path, class:"btn btn-primary" %>
    </div>

  </div>
</section>
