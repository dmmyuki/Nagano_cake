<section class="container">
  <div class="row">
    <div class="col-lg-12">
      <h4 class="my-3"><span class="bg-light">注文履歴一覧</span></h4>
    </div>

    <div class="col-lg-10 offset-lg-1">
      <table class="table">
        <thead>
          <tr class="bg-light">
            <th scope="col">購入日時</th>
            <th scope="col">購入者</th>
            <th scope="col">注文個数</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to admin_order_path(order) do %>
                    <%= order.created_at.strftime("%Y/%m/%d") %>
                  <% end %>
              </td>
              <td><%= order.customer.full_name %></td>
              <td><%= order.order_details.sum(:amount) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>
