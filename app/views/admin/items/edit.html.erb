<section class="container">
  <div class="row">
    <div>
      <h4>商品編集</h4>
    </div>

    <div>
      <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
      <table class="table table-borderless">
        <tr>
          <th><%= f.label:image, "商品画像" %></th>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <th><%= f.label:name, "商品名" %></th>
          <td><%= f.text_field:name %></td>
        </tr>
        <tr>
          <th><%= f.label:introduction, "商品説明" %></th>
          <td><%= f.text_area:introduction %></td>
        </tr>
        <tr>
          <th><%= f.label:genre_id, "ジャンル" %></th>
          <td><%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "選択してください"}) %></td>
        </tr>
        <tr>
          <th><%= f.label:price, "税抜価格" %></th>
          <td><%= f.text_field:price %></td>
        </tr>
      </table>
        <%= f.submit "変更を保存" %>
      <% end %>
    </div>
  </div>
</section>
