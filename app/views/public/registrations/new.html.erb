<div class="col-lg-8">
  <h4 class="my-3"><span class="bg-light">新規会員登録</span></h4>
</div>

  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

  <div class="col-lg-10 offset-lg-1">
    <table class="table table-borderless">
      <tr>
          <th>名前</th>
          <td>
            <%= f.label:last_name,  "（姓）" %>
            <%= f.text_field:last_name, placeholder:"令和" %>
          </td>
          <td>
            <%= f.label:first_name, "（名）" %>
            <%= f.text_field:first_name, placeholder:"道子" %>
          </td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td>
          <%= f.label:last_name_kana, "（セイ）" %>
          <%= f.text_field:last_name_kana, placeholder:"レイワ" %>
        </td>
        <td>
          <%= f.label:first_name_kana, "（メイ）" %>
          <%= f.text_field:first_name_kana, placeholder:"ミチコ" %>
        </td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= f.email_field:email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com" %></td>
      </tr>
      <tr>
        <th>郵便番号（ハイフンなし）</th>
        <td><%= f.text_field:postal_code, placeholder:"0000000" %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= f.text_field:address, placeholder:"東京都渋谷区代々木神園町0-0" %></td>
      </tr>
      <tr>
        <th>電話番号（ハイフンなし）</th>
        <td><%= f.text_field:telephone_number, placeholder:"00000000000" %></td>
      </tr>
      <tr>
        <th>パスワード（6文字以上）</th>
        <td>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </td>
      </tr>
      <tr>
        <th>パスワード（確認用）</th>
        <td>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </td>
      </tr>
      <tr>
        <th></th>
        <td><%= f.submit "新規会員登録",class:"btn btn-success" %></td>
      </tr>
    </table>
  </div>
  <% end %>

<div class="col-lg-8">
  <h4 class="my-3"><span class="bg-light">既に登録済みの方</span></h4>
  <%= render "public/shared/links" %>からログインして下さい。
</div>
