<section class="container">
  <div class="row">

    <div class="col-lg-8">
      <h4 class="my-3"><span class="bg-light">マイページ</span></h4>
    </div>

    <div class="col-6">
      <h5>登録情報</h5>
    </div>
    <div class="col-6">
      <%= link_to "編集する", edit_customers_path, class:"btn btn-success" %>
    </div>

    <div class="col-lg-8 my-3">
      <table class="table table-bordered">
        <tr>
          <th class="table-secondary">氏名</th>
          <td><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>
        <tr>
          <th class="table-secondary">カナ</th>
          <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="table-secondary">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="table-secondary">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="table-secondary">電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="table-secondary">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>

    <div class="col-lg-8">
      <h5>配送先</h5> <%= link_to "一覧を見る", addresses_path, class:"btn btn-primary" %>
      <h5>注文履歴</h5> <%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %>
    </div>

  </div>
</section>
